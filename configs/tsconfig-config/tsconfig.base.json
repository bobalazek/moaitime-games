{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    /* Need to keep this at ES6 tops, else Safari angry! Also, DO NOT USE "optional?.chaining?.operator" on the frontend. Not working in Safari!! */
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@moaitime-games/shared-common": ["../../packages/shared-common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
